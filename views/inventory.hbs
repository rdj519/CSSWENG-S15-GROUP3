                            <a class="nav-link sideBarOptions" href="/orders">Orders</a>
                            <a class="nav-link active sideBarOptions" href="/inventory">Stock Inventory</a>
                            <a class="nav-link sideBarOptions" href="/contacts">Contacts</a>
