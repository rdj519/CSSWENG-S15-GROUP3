<!DOCTYPE html>
<html>
<head>
	<title>Manage Orders</title>

	{{!-- BootStrap --}}
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

	<!-- CSS -->
	<link rel="stylesheet" href="css/orders.css">

	<!-- Fonts-->
	<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

	<!-- JS -->
	<script src="/js/orders.js"></script>
	<script src="/js/validator.min.js" type="text/javascript"></script>
	
	<!-- PDF -->
	<meta charset="utf-8" />
    <script src="https://unpkg.com/pdf-lib@1.4.0"></script>
    <script src="https://unpkg.com/downloadjs@1.4.7"></script>

</head>
<body>

	<div class="margin" id="orderDiv">
		<div class="row">
			<div class="col-2">
					<div class="sidenav sticky">
                        <div class="nav flex-column nav-pills" aria-orientation="vertical">
                            <a class="nav-link sideBarOptions" href="/home"><h3><font face="headerFont"><b>SioPau</b></h3></font></h3></a>
                            <a class="nav-link active sideBarOptions" href="/orders">Orders</a>
                            <a class="nav-link sideBarOptions" href="/inventory">Stock Inventory</a>
                            <a class="nav-link sideBarOptions" href="/contacts">Contacts</a>
							<hr>
                            <a class="nav-link sideBarOptions" href="/settings">Settings</a>
                            <a class="nav-link sideBarOptions" href="/user/logout">Log Out</a>
                        </div>
                    </div>
			</div>
			<div class="col-10 card border-0 main">
				<div class="card-body">
					<div class="tab-content" id="v-pills-tabContent">
						<div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
							<h1><b>Manage Orders</b></h1>
							<p id="p1">This page contains the orders and their informations. </p>

							<!-- for search and add order button -->
							<div class="row">
								<div class="col-3">
									
									<!-- Filter button -->
									<div class="dropdown">
										<button class="btn btn-primary dropdown-toggle" id="filterButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter by</button>
										<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
											<li class="dropdown-submenu">
												<li><a class="dropdown-item" href="#">all</a></li>
												<a class="dropdown-item dropdown-toggle" href="#">Status</a>
												<ul class="dropdown-menu">
													<li><a class="dropdown-item" href="#">confirmed</a></li>
													<li><a class="dropdown-item" href="#">paid</a></li>
													<li><a class="dropdown-item" href="#">delivering</a></li>
													<li><a class="dropdown-item" href="#">completed</a></li>
												</ul>
												<a class="dropdown-item dropdown-toggle" href="#">Payment Method</a>
												<ul class="dropdown-menu">
													<li><a class="dropdown-item" href="#">cod</a></li>
													<li><a class="dropdown-item" href="#">gcash</a></li>
													<li><a class="dropdown-item" href="#">paymaya</a></li>
												</ul>
												<a class="dropdown-item dropdown-toggle" href="#">Courier</a>
												<ul class="dropdown-menu">
													<li><a class="dropdown-item" href="#">castilla</a></li>
													<li><a class="dropdown-item" href="#">grabexpress</a></li>
													<li><a class="dropdown-item" href="#">mrspeedy</a></li>
													<li><a class="dropdown-item" href="#">lalamove</a></li>
												</ul>
											</li>
										</ul>
									</div>

								</div>
								<div class="col-5">
										<!-- activation button for filtering -->
										<button class="btn btn-light btn-outline-secondary" type="button" id="filterActivate">Go</button>
								</div>
								<div class="col-4">
									<div class="row">
										<!-- search bar-->
										<div class="col-7">
											<div class="input-group">
												<input type="text" class="form-control" id="searchName" placeholder="Search Name" aria-label="order number" aria-describedby="button-addon2" onkeyup="liveSearch()">
											</div>
										</div>

										<!-- add order -->
										<div class="col-5">
											<button class="btn btn-light float-right btn-outline-secondary" data-toggle="modal" data-target="#addOrder" type="submit" style="margin-bottom: 5px;" >Add Order</button>
										</div>
									</div>
								</div>
							</div>

							<!-- table of customers-->
							<div class="card" id="orderTable">
								<table class="table table-hover" >
									<thead>
										<tr>
											<th scope="col">Name</th>
											<th scope="col">Contact Number</th>
											<th scope="col">Address</th>
											<th scope="col">Status</th>
											<th scope="col">Courier</th>
											<th scope="col">Date Placed</th>
											<th scope="col">Delivery Date</th>
										</tr>
									</thead>
									<tbody id="tbody">
										{{#each contents}}
										<tr class="{{status}} {{courier}} {{city}} {{paymentMethod}} {{datePlaced}} {{deliveryDate}}" data-toggle="modal" data-id="2" data-target="#order{{_id}}" onclick="showTotal('{{_id}}'); deleteCheck('{{_id}}');">
											<td scope="row">{{customerName}}</td>
											<td>{{contactNumber}}</td>
											<td>{{homeAddress}}</td>
											<td>{{status}}</td>
											<td>{{courier}}</td>
											<td>{{placedDate}}</td>
											<td>{{deliveryDate}}</td>
										</tr>

										<!-- Modal For Deleting Order -->
										<div class="modal fade" id="delete{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
										  <div class="modal-dialog" role="document">
		
										    <div class="modal-content">
										      <div class="modal-header">
										        <h5 class="modal-title">Order Deletion for {{customerName}}</h5>
										        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
										          <span aria-hidden="true">&times;</span>
										        </button>
										      </div>
										      <div class="modal-body">
										        <p>Are you sure you want to delete this order?</p>
										        <input type="text"  class="form-control validate deleteConfirmation" placeholder="CONFIRM">
										      </div>
										      <div class="modal-footer">
										        <button type="button" class="btn btn-danger customerName" id="deleteButton" deleteId="{{_id}}" data-dismiss="modal">Yes</button>
										        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
										      </div>
										    </div>	
										  </div>
										</div>

										<!-- Order Modal -->
										<div class="modal fade" id="order{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
											aria-hidden="true">
										
											<div class="modal-dialog" role="document">
												<div class="modal-content">
													<div class="modal-header">
														<h5 class="modal-title" id="name-{{_id}}" value="{{customerName}}">{{customerName}}</h5>
														<button type="button" class="close" data-dismiss="modal" aria-label="Close">
															<span aria-hidden="true">&times;</span>
														</button>
													</div>
													<div class="modal-body">
										
														<label style="color:#A39E9C"> Contact Number </label>
														<input type="text" class="form-control" id="contactNumberModal-{{_id}}" og="{{contactNumber}}" min="0"
                            onkeydown="javascript: return event.keyCode === 8 || event.keyCode === 46 ? true : !isNaN(Number(event.key))" value="{{contactNumber}}">
														<label style="color:#A39E9C"> Home Address </label>
														<input type="text" class="form-control" id="homeAddressModal-{{_id}}" og="{{homeAddress}}" value="{{homeAddress}}">
														<label style="color:#A39E9C"> City/Municipality </label>
														<input type="text" class="form-control" id="cityModal-{{_id}}" og="{{city}}" value="{{city}}">
														<label style="color:#A39E9C"> Courier</label>
														<div class="info">
															<div class="dropdown">
																<button class="btn btn-light dropdown-toggle" type="button" id="courierModal-{{_id}}"
																	data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
																	og="{{courier}}" value="{{courier}}">{{courier}}</button>
																<div id="courierOptions" class="dropdown-menu" aria-labelledby="dropdownMenuButton">
																	<a class="dropdown-item" href="#" value="grabexpress">grabexpress</a>
																	<a class="dropdown-item" href="#" value="castilla">castilla</a>
																	<a class="dropdown-item" href="#" value="lalaMoves">lalaMove</a>
																	<a class="dropdown-item" href="#" value="mrspeedy">mrspeedy</a>
																</div>
															</div>
														</div>
										
										
														<label style="color:#A39E9C"> Date Placed</label>
														<input class="info" type="date" id="placedDateModal-{{_id}}" name="trip-start" og="{{placedDate}}" value="{{placedDate}}"
															readonly>
														<label style="color:#A39E9C"> Delivery Date</label>
														<input class="info" type="date" id="deliveryDateModal-{{_id}}" name="trip-start"
															og="{{deliveryDate}}" value="{{deliveryDate}}">
														<label style="color:#A39E9C"> Payment Method</label>
														<div class="info">
															<div class="dropdown">
																<button class="btn btn-light dropdown-toggle" type="button" id="paymentMethodModal-{{_id}}"
																	data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
																	og="{{paymentMethod}}" value="{{paymentMethod}}">{{paymentMethod}}</button>
																<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
																	<a class="dropdown-item" href="#">gcash</a>
																	<a class="dropdown-item" href="#">cod</a>
																	<a class="dropdown-item" href="#">paymaya</a>
																</div>
															</div>
														</div>
														<label style="color:#A39E9C">Status</label>
														<div class="info">
															<div class="dropdown">
																<button class="btn btn-light dropdown-toggle" type="button" id="statusModal-{{_id}}"
																	data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
																	og="{{status}}" value="{{status}}">{{status}}</button>
																<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
																	<a class="dropdown-item" href="#">confirmed</a>
																	<a class="dropdown-item" href="#">paid</a>
																	<a class="dropdown-item" href="#">delivering</a>
																	<a class="dropdown-item" href="#">completed</a>
																</div>
															</div>
														</div>
										
														<label id="prods-{{_id}}" lenCustomerOrder="{{customerOrder.length}}"><b> Product </b></label>
														<div class="row info">	
															<div class="col"><b> Quantity </b><white>  </white> </div>
															<div class="col"><b> Price/pack </b><white>....</white></div>
														</div>


														{{#each customerOrder}}
														<label id="{{id}}-{{_id}}"> {{name}} </label>
														<div class="row info">	
															<div class="col"> <input id="{{../_id}}-{{_id}}" size="6" value="{{quantity}}" ogquan="{{quantity}}" itemID="{{_id}}" pname="{{name}}" class="prodQuan-{{_id}} pq-{{../_id}}" lenCustomerOrder="{{customerOrder.length}}" price="{{price}}" itemprice="{{price}}" onkeyup="overallitem('{{_id}}', '{{../_id}}')" readonly> </div>
															<div class="col"> <input id="price{{../_id}}-{{_id}}" size="6" 
																value="{{price}}" readonly> </div>
														</div>
														{{/each}}  

														<label><button class="btn btn-light float-right btn-outline-secondary" data-dismiss="modal" data-toggle="modal" data-target="#changeItemModal" type="button" style="margin-bottom:5px; background-color: rgb(150,117,103) !important; color: #FFF !important;">Change Items</button></label>
														<!-- onchange="updateQuan('{{_id}}', '{{../_id}}')" -->														

														<label style="color:#A39E9C"> Overall Price</label>
														<input type="text" class="form-control" id="overallPriceModal-{{_id}}" value="{{productTotal}}" readonly>
														<label style="color:#A39E9C"> Delivery Fee</label>
														<input type="text" class="form-control" id="deliveryFeeModal-{{_id}}" onchange="updateTotal('{{_id}}')" og="{{deliveryFee}}" value="{{deliveryFee}}">
														<label style="color:#F05959; font-weight: bold;"> Total Amount</label>
														<input type="text" class="form-control" id="totalPriceModal-{{_id}}" style="font-weight:bold;" readonly>
														<p id="errorUpdate-{{_id}}" class="error"><br></p>
														<!-- <p id="deleteUpdate-{{_id}}" class="error"><br></p> -->

													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-danger" data-dismiss="modal" data-toggle="modal" id="deleteBtn-{{_id}}" data-id="2" data-target="#delete{{_id}}" style="float:left;">Delete Order</button>
														<button type="button" class="btn btn-info mr-auto" id={{_id}} data-dismiss="modal" style="float:left;"
															onclick="createPdf('{{_id}}', $('.prodQuan-{{_id}}').attr('pname'))">Print</button>
														<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
														<button id="{{_id}}-saveChangeOrder" type="button" class="btn btn-primary"
															onclick="saveChanges('{{_id}}');">Save changes</button>
													</div>
												</div>
												</div>
										    </div>


										    {{> changeItemModal _id=_id}}
										<!-- end -->
										{{/each}}
									</tbody> 
								</table>
							</div>
							</div>

							{{>addOrderModal}}
							<!-- Modal For Adding Order -->
							

						</div>
					</div>
				</div>

			</div>
		</div>
	</div>




<!-- JS-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>	