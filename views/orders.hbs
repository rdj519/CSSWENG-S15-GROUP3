			var td5 = $("<td></td>");
			td5.text($("#courier").text()); 
			
			/* placed date */
			var td6 = $("<td></td>");
			var today = new Date();
			var dd = String(today.getDate()).padStart(2, '0');
			var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
			var yyyy = today.getFullYear();
			today = yyyy + '-' + mm + '-' + dd;
			td6.text(today);
			/* delivery date */
			var td7 = $("<td></td>");
			td7.text($("#deliveryDate").val());
			primaryTag.append(th);
			primaryTag.append(td1);
			primaryTag.append(td2);
			primaryTag.append(td3);
			primaryTag.append(td4);
			primaryTag.append(td5);
			primaryTag.append(td6);
			primaryTag.append(td7);
			element.append(primaryTag);
			/* modal */
			
	});

