<script>


	$('.dropdown-menu a.dropdown-toggle').on('click', function(e) {
		if (!$(this).next().hasClass('show')) {
			$(this).parents('.dropdown-menu').first().find('.show').removeClass('show');
		}
		var $subMenu = $(this).next('.dropdown-menu');
		$subMenu.toggleClass('show');


		$(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function(e) {
			$('.dropdown-submenu .show').removeClass('show');
		});

		return false;
	});

	$(".dropdown-menu a").click(function(){
  		$(this).parents(".dropdown").find('.btn').html($(this).text() + ' <span class="caret"></span>');
  		$(this).parents(".dropdown").find('.btn').val($(this).data('value'));
	});

	/* order number */
	var orderNumber = 0;

	$("#addOrderButton").click(function(){
			orderNumber += 1;
			var element = $("#tbody");
			var primaryTag = $("<tr></tr>");
			primaryTag.attr("data-toggle", "modal");
			primaryTag.attr("data-target", orderNumber.toString());
			primaryTag.attr("data-id", orderNumber.toString());
			var th = $("<th></th>");
			th.attr("scope","row");
			th.text(orderNumber.toString());
			var td1 = $("<td></td>");
			td1.text($("#name").val());
			var td2 = $("<td></td>");
			td2.text($("#contact").val());
			var td3 = $("<td></td>");
			td3.text($("#homeAddress").val());
			var td4 = $("<td></td>");
			td4.text($("#method").text()); 
			var td5 = $("<td></td>");
			td5.text($("#courier").text()); 
			
			/* placed date */
			var td6 = $("<td></td>");

			var today = new Date();
			var dd = String(today.getDate()).padStart(2, '0');
			var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
			var yyyy = today.getFullYear();
			today = yyyy + '-' + mm + '-' + dd;

			td6.text(today);
			/* delivery date */
			var td7 = $("<td></td>");
			td7.text($("#deliveryDate").val());

			primaryTag.append(th);
			primaryTag.append(td1);
			primaryTag.append(td2);
			primaryTag.append(td3);
			primaryTag.append(td4);
			primaryTag.append(td5);
			primaryTag.append(td6);
			primaryTag.append(td7);

			element.append(primaryTag);

			/* modal */
			

	});


</script>


