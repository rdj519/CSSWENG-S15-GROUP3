    </style>
</head>
<body>

    <div class="margin">
        <div class="row">
            <!-- SIDE BAR -->
            <div class="col-2">
                <div class="sidenav sticky">
                    <div class="nav flex-column nav-pills" aria-orientation="vertical">
                        <a class="nav-link sideBarOptions" href="/home"><h3><b>SioPau</b></h3></a>
                        <a class="nav-link sideBarOptions" href="/orders">Orders</a>
                        <a class="nav-link sideBarOptions" href="/inventory">Stock Inventory</a>
