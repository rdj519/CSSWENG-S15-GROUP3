                        <a class="nav-link sideBarOptions" href="/settings">Settings</a>
                        <a class="nav-link sideBarOptions" href="/user/logout">Log Out</a>
					</div>
				</div>
			</div>
		
			<div class="col-10 card border-0 main">
				<div class="card-body">
					<div class="tab-content" id="v-pills-tabContent">
						<div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
							<h1><b>Customer List</b></h1>
							This page contains the contact information of previous customers.
							<br>
							<br>

							<!-- for search and add contact button -->
							<div class="row">
								<div class="col-1">
									<!-- Sort button -->
									<div class="dropdown">
										<button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										  Sort by
										</button>
										<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										  <a class="dropdown-item" href="#">Customer No.</a>
										  <a class="dropdown-item" href="#">Name</a>
										  <a class="dropdown-item" href="#">City/Municipality</a>
										</div>
									</div>
								</div>
								<div class="col-7">
									<!-- Filter button -->
									<div class="dropdown">
										<button class="btn btn-primary dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											Filter by
										</button>
										<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
											<li class="dropdown-submenu">
												<a class="dropdown-item dropdown-toggle" href="#">City/Municipality</a>
												<ul class="dropdown-menu">
													<a class="dropdown-item" href="#">
														<input type="text" class="form-control" placeholder="City/Municipality" aria-label="order number" aria-describedby="button-addon2">
														<div class="input-group-append">
															<button class="btn-xs btn-light btn-outline-secondary" type="button" id="button-addon2" style="margin-top:5px;">Go</button>
														</div>
													</a>
												</ul>
											</li>
										</ul>
									</div>
								</div>
								<div class="col-4">
									<div class="row">
										<!-- search bar-->
										<div class="col-7">
											<div class="input-group">
												<input type="text" class="form-control" placeholder="Search" aria-label="Recipient's username" aria-describedby="button-addon2">
												<div class="input-group-append">
													<button class="btn btn-light btn-outline-secondary" type="button" id="button-addon2">Go</button>
												</div>
											</div>
										</div>

										<!-- add contact -->
										<div class="col-5">
											<button id="addBtn" class="btn btn-light float-right btn-outline-secondary" data-toggle="modal" type="submit" data-target="#newContact" style="margin-bottom: 5px;">Add Contact</button>
										</div>
									</div>
								</div>
							</div>

							<!-- table of customers-->
							<div class="card">
								<table class="table table-hover">
									<thead>
										<tr>
											<th scope="col">Customer #</th>
											<th scope="col">Name</th>
											<th scope="col">Contact Number</th>
											<th scope="col">Home Address</th>
											<th scope="col">City/Municipality</th>
											<th scope="col">Remarks</th>
										</tr>
									</thead>
									<tbody id="tbody">
										<!-- {{#each customers}}
										<tr data-toggle="modal" data-id="{{cusNumber}}" data-target="#{{cusNumber}}">
											<th scope="row">{{cusNumber}}</th>
											<td>{{name}}</td>
											<td>{{contact}}</td>
											<td>{{home}}</td>
											<td>{{city}}</td>
											<td>{{remark}}</td>
										</tr>
										{{/each}} -->
									</tbody>
								</table>
							</div>

							<!-- Modal For New Contact -->
							<div id="newContact" class="modal fade" role="dialog">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
									  		<h5 class="modal-title" id="exampleModalLabel">New Contact</h5>
									  		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
									  		</button>
										</div>
										
											<div class="modal-body">

												<div class="md-form mb-4">
													<label data-error="wrong" data-success="right" for="name">Name</label>
													<input type="text" id="name" class="form-control validate">
												</div>
	  
												<div class="md-form mb-4">
													<label data-error="wrong" data-success="right" for="contact">Contact Number</label>
													<input type="number" id="contact" class="form-control validate" min="0" onkeydown="javascript: return event.keyCode === 8 ||
event.keyCode === 46 ? true : !isNaN(Number(event.key))" />
										  		</div>

	  											<div class="md-form mb-4">
													<label data-error="wrong" data-success="right" for="home">Home Address</label>
													<input type="text" id="home" class="form-control validate">
												</div>

												<div class="md-form mb-4">
													<label data-error="wrong" data-success="right" for="city">City/Municipality</label>
													<input type="text" id="city" class="form-control validate">
												</div>

												<div class="md-form mb-4">
													<label data-error="wrong" data-success="right" for="remark">Remarks</label>
													<input type="text" id="remark" class="form-control validate">
												</div>
											</div>

											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												<button type="button" id="submitInfo" class="btn btn-primary">Create Contact</button>
											</div>
									</div>
								</div>
							</div>

							<!-- Delete Contact Modal-->
							<div class="modal fade" id="deleteContact" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
							  <div class="modal-dialog" role="document">
							    <div class="modal-content">
							      <div class="modal-header">
							        <h5 class="modal-title">Delete Contact</h5>
							        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
							          <span aria-hidden="true">&times;</span>
							        </button>
							      </div>
							      <div class="modal-body">
							        <p>Are you sure you want to delete this contact?</p>
									<input type="text" id="defaultForm-pass" class="form-control validate">
							      </div>
							      <div class="modal-footer">
							        <button type="button" class="btn btn-danger">Yes</button>
							        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
							      </div>
							    </div>
							  </div>
							</div>
							<!-- edit contact modal -->



						</div>
					</div>
				</div>
			</div>

			</div>
		</div>
	</div>


    <script>

		$('.dropdown-menu a.dropdown-toggle').on('click', function(e) {
			if (!$(this).next().hasClass('show')) {
				$(this).parents('.dropdown-menu').first().find('.show').removeClass('show');
			}
			var $subMenu = $(this).next('.dropdown-menu');
			$subMenu.toggleClass('show');


			$(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function(e) {
				$('.dropdown-submenu .show').removeClass('show');
			});

			return false;
		});

		
		$(".dropdown-menu a").click(function(){
  			$(this).parents(".dropdown").find('.btn').html($(this).text() + ' <span class="caret"></span>');
  			$(this).parents(".dropdown").find('.btn').val($(this).data('value'));
		});


