<div id="contact-{{_id}}" class="modal fade" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Contact</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="name">Name</label>
                    <input type="text"  class="form-control validate" value="{{name}}">
                </div>

                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="contact">Contact Number</label>
                    <input type="number"  class="form-control validate" min="0" onkeydown="javascript: return event.keyCode === 8 ||
event.keyCode === 46 ? true : !isNaN(Number(event.key))" value="{{contactNumber}}"/>
                </div>

                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="home">Home Address</label>
                    <input type="text"  class="form-control validate" value="{{homeAddress}}">
                </div>

                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="city">City/Municipality</label>
                    <input type="text"  class="form-control validate" value="{{city}}">
                </div>

                <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="remark">Remarks</label>
                    <input type="text"  class="form-control validate" value="{{remarks}}">
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" contactID="{{_id}}" id="submitInfo-{{_id}}" class="btn btn-primary updateContact">Update Contact</button>
            </div>
        </div>
    </div>
</div>